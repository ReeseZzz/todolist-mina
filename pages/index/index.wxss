.container{
  width: 100%;
  height: 100vh;
  position: fixed;
  display:flex;
  flex-direction:column;
  justify-content: center;/*水平居中*/
  background-color: antiquewhite;
}
.topbar{
  width: 100%;
  height: 120rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: flex-end;
  box-sizing: border-box;
  padding: 0 30rpx
}
.day{
  font-size: 36rpx;
  margin-bottom: 14rpx;
}
.date,.add-btn{
  font-size: 24rpx;
}
.add-btn, .plus-sign{
  display: inline-block;
}
.plus-sign{
  width: 20rpx;
  height: 20rpx;
  margin-left: 16rpx;
}



.list-content{
  width: 100%;
  display: flex;
  justify-content: center;
  flex-wrap: wrap;
  margin-top: 45rpx;
  min-height: 500rpx;
}
.list-content .item{
  position: relative;
  display: block;
  width: 662rpx;
  height: 90rpx;
  background: linear-gradient(to right,#114cf4, #20cfef);
  border-radius: 8rpx;
  margin-bottom: 30rpx;
  text-indent: 100rpx;
  line-height: 90rpx;
  font-size: 24rpx;
  color: #fff;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.list-content .item::after{
  display: block;
  content: '';
  position: absolute;
  width: 36rpx;
  height: 36rpx;
  border-radius: 50%;
  left:  28rpx;
  top: 50%;
  transform: translateY(-50%);
  background-color: #fff;
}
.list-content .item.overdue{
  background: #fff;
  color: #d3d3d3;
  text-decoration: line-through;
}
.list-content .item.overdue::after{
  background-color: #d3d3d3;
}