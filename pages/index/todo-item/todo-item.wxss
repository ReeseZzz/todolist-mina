
.item{
  position: relative;
  display: block;
  width: 662rpx;
  height: 90rpx;
  background: #509AFF;
  border-radius: 8rpx;
  margin-bottom: 10rpx;
  text-indent: 100rpx;
  line-height: 90rpx;
  font-size: 24rpx;
  color: #fff;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.item::after{
  display: block;
  content: '';
  position: absolute;
  width: 36rpx;
  height: 36rpx;
  border-radius: 50%;
  left:  28rpx;
  top: 50%;
  transform: translateY(-50%);
  background-color: #fff;
}
.item.overdue{
  background: #fff;
  color: #d3d3d3;
  text-decoration: line-through;
}
.item.overdue::after{
  background-color: #d3d3d3;
}

.edit-control-wrapper{
  width: 662rpx;
  height: 0rpx;
  display: none;
  opacity: 0;
  transition: all linear .2s;
  margin-bottom: 10rpx;
}
.edit-control-wrapper.active{
  width: 662rpx;
  height: 90rpx;
  display: block;
  opacity: 1;
  transition: all linear .2s;
}

.edit-control{
  width: 662rpx;
  height: 90rpx;
  background: #fff;
  border-radius: 8rpx;
  box-sizing: border-box;
  border: 1px solid #c5c0c0;
  display: flex;
  align-items: center;
  position: relative;
  overflow: hidden;
}

.edit-control::after{
  content: '';
  display: block;
  position: absolute;
  background-color: #c5c0c0;
  width: 1rpx;
  height: 48rpx;
  top: 20rpx;
  left: 50%;
  transform: translateX(-50%);
}
.edit-wrapper, .del-wrapper{
  width: 50%;
  display: flex;
  align-items: center;
  justify-content: center;

}
.edit-wrapper .text, .del-wrapper .text{
  font-size: 23rpx;
  color: #509AFF;
  margin-right: 24rpx;
}
.edit-wrapper .icon-edit, .del-wrapper .icon-del{
  width: 38rpx;
  height: 38rpx;
}